{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      ".firebase/**",
      ".git/**",
      ".git",
      "**/.*/*",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [ {
      "source": "/t/**",
      "destination": "/game/index.html"
    },
    {
      "source": "/l/**",
      "destination": "/game/index.html"
    } ]
  }
}
